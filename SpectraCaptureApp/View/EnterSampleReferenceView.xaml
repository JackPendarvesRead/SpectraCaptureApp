<rxui:ReactiveUserControl
    x:Class="SpectraCaptureApp.View.EnterSampleReferenceView"
    x:TypeArguments="vm:EnterSampleReferenceViewModel"
    xmlns:rxui="http://reactiveui.net"
    xmlns:vm="clr-namespace:SpectraCaptureApp.ViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    Background="WhiteSmoke"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <Label>Sample Reference</Label>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="SampleReference" MinWidth="100" />
                <Button x:Name="AutoRef" Content="AutoRef" />
            </StackPanel>
            <Label>Calibration Set</Label>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="CalibrationSetComboBox" MinWidth="100" />
            </StackPanel>
            <Button x:Name="NextButton" Content="Scan" />
        </StackPanel>        
    </Grid>

</rxui:ReactiveUserControl>