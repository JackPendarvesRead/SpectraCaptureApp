<rxui:ReactiveUserControl
    x:Class="SpectraCaptureApp.View.EnterSampleReferenceView"
    x:TypeArguments="vm:EnterSampleReferenceViewModel"
    xmlns:rxui="http://reactiveui.net"
    xmlns:vm="clr-namespace:SpectraCaptureApp.ViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    Background="WhiteSmoke"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <StackPanel>
            <Label Style="{StaticResource Title}">Enter Sample Reference</Label>
            <TextBlock>Enter sample reference and click "Start" to begin scan process.</TextBlock>
            <TextBox x:Name="SampleReference" MinWidth="300" />
            <!--<StackPanel Orientation="Horizontal">
                <Button x:Name="AutoRef" Content="AutoRef" />
            </StackPanel>-->
            <Button x:Name="NextButton" Content="Start" HorizontalAlignment="Left" />
        </StackPanel>        
    </Grid>

</rxui:ReactiveUserControl>