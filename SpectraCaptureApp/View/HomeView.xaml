<rxui:ReactiveUserControl
    x:Class="SpectraCaptureApp.View.HomeView"
    x:TypeArguments="vm:HomeViewModel"
    xmlns:rxui="http://reactiveui.net"
    xmlns:vm="clr-namespace:SpectraCaptureApp.ViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    Background="WhiteSmoke"
    mc:Ignorable="d">

    <StackPanel
        VerticalAlignment="Center"
        HorizontalAlignment="Center">
        <Image Width="100">
            <Image.Source>
                <BitmapImage DecodePixelWidth="100" UriSource="/Images/AunirLogo.jpg" />
            </Image.Source>
        </Image>
        <TextBlock TextWrapping="Wrap">Welcome to NIR4 Windows spectra capture application. Click "New Scan" to capture a new scan.</TextBlock>
    </StackPanel>
</rxui:ReactiveUserControl>