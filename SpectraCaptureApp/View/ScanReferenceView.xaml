<rxui:ReactiveUserControl
    x:Class="SpectraCaptureApp.View.ScanReferenceView"
    x:TypeArguments="vm:ScanReferenceViewModel"
    xmlns:rxui="http://reactiveui.net"
    xmlns:vm="clr-namespace:SpectraCaptureApp.ViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    Background="WhiteSmoke"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>SampleRefence = </Label>
                <TextBlock x:Name="SampleReference" />
            </StackPanel>
            <TextBlock x:Name="PathTextBlock" 
                       TextWrapping="Wrap" 
                       Text="This is where you might type some instructions about scanning reference or preparing sample or whatever whatever before going to the next screen to take the capture" />
            <Image Width="250">
                <Image.Source>
                    <BitmapImage DecodePixelWidth="250" 
                                 UriSource="/Images/Baseline.png" />
                </Image.Source>
            </Image>
            <Button x:Name="ScanReferenceButton" Content="Scan Reference" />
        </StackPanel>
    </Grid>
</rxui:ReactiveUserControl>