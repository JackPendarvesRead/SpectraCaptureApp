<rxui:ReactiveUserControl
    x:Class="SpectraCaptureApp.View.ScanSubsampleView"
    x:TypeArguments="vm:ScanSubsampleViewModel"
    xmlns:rxui="http://reactiveui.net"
    xmlns:vm="clr-namespace:SpectraCaptureApp.ViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    Background="WhiteSmoke"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="PathTextBlock" Foreground="Black" Margin="10" Text="THIS IS THE SCANCAPTURE VIEW" />
            <StackPanel Orientation="Horizontal">
                <Label>Scan Number: </Label>
                <TextBlock x:Name="ScanNumber" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Scan in progress:</Label>
                <TextBlock x:Name="IsLoading"/>
            </StackPanel>
            <Image Width="200">
                <Image.Source>
                    <BitmapImage DecodePixelWidth="200" UriSource="/Images/Scanning.jpg" />
                </Image.Source>
            </Image>
            <Button x:Name="ScanButton" Content="Scan Sample" />
            <Button x:Name="SaveButton" Content="Save" />
        </StackPanel>
    </Grid>
</rxui:ReactiveUserControl>